{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "settings": {
    "import/core-modules": [
      "App",
      "route",
      "reactApplication"
    ],
    "import/resolver": {
      "node": {
        "paths": ["./server", "./src", "./config"]
      }
    }
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "jsx-a11y/anchor-is-valid": [ "error", {
        "components": [ "Link" ],
        "specialLink": [ "to" ],
        "aspects": [ "noHref" ]
      }]
  }
}